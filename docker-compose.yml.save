version: '3'
volumes:
  postgres_data:
  foodgram_static:
services:
  db:
    image: postgres:13.10
    env_file: .env
    volumes:
      - postgres_data:/var/lib/postgresql/data
  backend:
    image: foodgram_backend
    env_file: .env
    depends_on:
      - db
    
  frontend:
    image: foodgram_frontend
    env_file: .env
  gateway:
    image: foodgram_gateway
    ports:
      - 8000:80
